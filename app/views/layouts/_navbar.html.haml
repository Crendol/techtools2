%nav.navbar.navbar-expand-lg.bg-body-tertiary.bg-dark.sticky-top{ 'data-bs-theme' => "dark" }
  .container-fluid
    = link_to root_path, class: 'navbar-brand me-5', data: { turbo: false } do
      %h2.text-light
        = 'TechTools'
    %button.navbar-toggler{"aria-controls" => "navbarNavAltMarkup", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbarNavAltMarkup", "data-bs-toggle" => "collapse", :type => "button"}
      %span.navbar-toggler-icon
    - if user_signed_in?
      #navbarNavAltMarkup.collapse.navbar-collapse
        .navbar-nav
          = link_to 'placeholder', root_path, class: "nav-link text-light nav-link ms-2"
    = render 'layouts/login'

