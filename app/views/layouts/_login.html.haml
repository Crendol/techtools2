- if user_signed_in?
  .d-flex.align-items-center
    = link_to 'Profile', edit_user_registration_path, class: 'btn btn-warning me-2'
    = button_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-outline-light me-2'
- else
  .d-flex.align-items-center
    = link_to 'Login', new_user_session_path, class: 'btn btn-outline-light me-2'
    = link_to 'Register', new_user_registration_path, class: 'btn btn-warning me-2'

